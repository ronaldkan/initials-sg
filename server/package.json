{
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "cryptr": "^4.0.2",
    "ejs": "^2.6.1",
    "express": "^4.16.2",
    "express-jwt": "^5.3.1",
    "express-zip": "^2.0.1",
    "hummus-recipe": "^1.8.0",
    "image-data-uri": "^2.0.0",
    "jsonwebtoken": "^8.4.0",
    "md5-file": "^4.0.0",
    "multer": "^1.4.1",
    "nodemailer": "2.7.2",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "qrcode": "^1.3.2",
    "rimraf": "^2.6.2",
    "secure-pin": "^1.0.14",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "twilio": "^3.25.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  }
}
